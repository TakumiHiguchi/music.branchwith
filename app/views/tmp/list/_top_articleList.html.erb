<% count=0 #左右カウント %>
<div class="flex-jus-center topaListContainer">
  <% articles.each do |pass| %>
    <% count+=1 %>
    <div class="
      <% if count%2 == 1 %>
        topaList-left
      <% else %>
        topaList-right
      <% end %>
    ">
      <% if pass["thumbnail"] then %>
        <a href='/article/<%=pass["key"]%>' class="topaImage">
          <%= image_tag pass["thumbnail"], class: '' , alt: "#{pass["title"]}のサムネイル"%>
        </a>
      <% else %>
        <div class="topaImage"><Img src="https://i.ytimg.com/vi/ce_9Ze-gf2o/hqdefault.jpg"></div>
      <% end %>
      <a href='/article/<%=pass["key"]%>' class="title"><%= pass["title"] %></a>
      <p class="word_count"><%= strip_tags(pass["content"]).length %>文字</p>
      <% if pass["tags"].length > 0 %>
        <a href="tag/<%= pass["tags"][0]['key'] %>" class="label"><%= pass["tags"][0]['name'] %></a>
      <% end %>
    </div>
  <% end %>
</div>
